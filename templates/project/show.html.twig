{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Détail du projet :</h1>

    <h2>{{ project.name }}</h2>
    <br />
    <p>Projet réalisé du : {{ project.dateDebut|date('d/m/Y') }} au {{ project.dateFin|date('d/m/Y') }}</p>
    <br />
    <p>{{ project.description }}</p>
    <br />
    Les technologies utilisées :
    <ul>
    {% for technologies in project.technologies %}
        <li>{{ technologies.name }}</li>
    {% endfor %}
    </ul>
    <p>Voici le lien du projet : <a href= {{ project.link }}>Site du projet</a></p>

    <button type="button" class="btn btn-info">
        <a href="{{ path ('project.index')}}">Retour à la liste des projets</a>
    </button>
    
</div>
{% endblock %}