{% extends 'base.html.twig' %}

{% block title %}Voici mes projets réalisés !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Liste des projets :<br />
    {% for projects in project %}
        
        <ul>
            <li>{{ projects.name }}</li>
            <li>{{ projects.description }}</li>
            <li>{{ projects.dateDebut|date('d-m-Y') }} - {{ projects.dateFin|date('d-m-Y') }}</li>
            <li>{{ projects.link }}</li>
            {% for technologies in projects.technologies %}
            <li>{{ technologies.name }}</li>
            {% endfor %}
        </ul>

    {% endfor %}

</div>
{% endblock %}
