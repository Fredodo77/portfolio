{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur la messagerie</h1>
    <br />
    <button type="button" class="btn btn-success">
        <a href="{{ path ('contact.new')}}">Envoyer un message</a>
    </button>
    
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Message</th>
                    <th scope="col">Modification</th>
                    <th scope="col">Suppression</th>
                </tr>
            </thead>
            {% for contacts in contact %}
            <tbody>
                <tr class="table-light">
                    <td>{{ contacts.name }}</td>
                    <td>{{ contacts.mail }}</td>
                    <td>{{ contacts.detail }}</td>
                    <td>
                        <button type="button" class="btn btn-warning">
                            <a href="{{ path ('contact.edit', {id: contacts.id})}}">Modifier</a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger">
                            <a href="{{ path ('contact.delete', {id: contacts.id})}}">Supprimer</a>
                        </button>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
        </table>

</div>
{% endblock %}
