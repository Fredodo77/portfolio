{% extends 'base.html.twig' %}

{% block title %}Hello TechnologiesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Détail de la technologie :</h1>
<br />
    <h2>{{ technologies.name }}</h2>
    <br />
    Cette technologie a été utilisée pour les projets suivants :
    <ul>
        {% for project in technologies.project %}
        <li>
            <a href="{{ path ('project.show', {id: project.id}) }}">{{ project.name }}</a>
        </li>
        {% endfor %}
    </ul>
    <button type="button" class="btn btn-info">
        <a href="{{ path ('technologies.index')}}">Retour à la liste des technologies</a>
    </button>

</div>
{% endblock %}