{% extends 'base.html.twig' %}

{% block title %}Hello TechnologiesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Liste des technologies :</h1>
<br />
<button type="button" class="btn btn-success">
    <a href="{{ path ('technologies.new')}}">Ajouter une technologie</a>
</button>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Modification</th>
                <th scope="col">Suppression</th>
            </tr>
        </thead>
        <tbody>
            
        {% for technologies in technologie %}
        
            <tr class="table-light">
                <td>
                    <turbo-frame id="technologies-{{ technologies.id }}">
                    <a href="{{ path ('technologies.edit', {id: technologies.id})}}">{{ technologies.name }}</a></td>
                    </turbo-frame>
                <td>
                    <button type="button" class="btn btn-warning">
                        <a href="{{ path ('technologies.edit', {id: technologies.id})}}">Modifier</a>
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-danger">
                        <a href="{{ path ('technologies.delete', {id: technologies.id})}}">Supprimer</a>
                    </button>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
 </div>
{% endblock %}
