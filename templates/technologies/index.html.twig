{% extends 'base.html.twig' %}

{% block title %}Hello TechnologiesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Liste des technologies :</h1>
<br />
{% if is_granted('ROLE_USER') %}
<button type="button" class="btn btn-success">
    <a href="{{ path ('technologies.new')}}">Ajouter une technologie</a>
</button>
{% endif %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                {% if is_granted('ROLE_USER') %}
                <th scope="col">Modification</th>
                <th scope="col">Suppression</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            
        {% for technologies in technologie %}
        
            <tr class="table-light">
                <td>
                    <a href="{{ path ('technologies.show', {id: technologies.id})}}">{{ technologies.name }}</a></td>
                </td>
                {% if is_granted('ROLE_USER') %}
                <td>
                    <button type="button" class="btn btn-warning">
                        <a href="{{ path ('technologies.edit', {id: technologies.id})}}">Modifier</a>
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-danger">
                        <a href="{{ path ('technologies.delete', {id: technologies.id})}}">Supprimer</a>
                    </button>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
 </div>
{% endblock %}
